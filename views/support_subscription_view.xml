<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- form view for a openstack support_subscription -->
        <record id="view_openstack_support_subscription_form" model="ir.ui.view">
            <field name="name">openstack.support_subscription.form</field>
            <field name="model">openstack.support_subscription</field>
            <field name="arch" type="xml">
                <form string="OpenStack Support Subscription">
                    <group col="4">
                        <field name="project" />
                        <field name="partner" />
                    </group>
                    <group col="4">
                        <field name="start_date" />
                        <field name="end_date" />
                    </group>
                    <group col="4">
                        <field name="support_subscription_type" />
                        <field name="billing_type" />
                    </group>
                    <group col="4">
                        <field name="create_date" />
                    </group>
                </form>
            </field>
        </record>

        <!-- tree view for all openstack support_subscriptions -->
        <record id="view_openstack_support_subscription_tree" model="ir.ui.view">
            <field name="name">openstack.support_subscription.tree</field>
            <field name="model">openstack.support_subscription</field>
            <field name="arch" type="xml">
                <tree string="OpenStack Support Subscriptions">
                    <field name="project" />
                    <field name="partner" />
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="support_subscription_type" />
                    <field name="billing_type" />
                </tree>
            </field>
        </record>

        <!-- Search functionality for support_subscription -->
        <record id="view_openstack_support_subscription_filter" model="ir.ui.view">
            <field name="name">openstack.support_subscription.select</field>
            <field name="model">openstack.support_subscription</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Support Subscription">
                    <field name="project" />
                    <field name="support_subscription_type" />
                </search>
            </field>
        </record>

        <!-- action to open the openstack support_subscription list -->
        <record id="action_openstack_support_subscription_form" model="ir.actions.act_window">
            <field name="name">OpenStack Support Subscriptions</field>
            <field name="res_model">openstack.support_subscription</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu item for openstack support_subscription -->
        <menuitem
            action="action_openstack_support_subscription_form"
            id="menu_action_openstack_support_subscription_form"
            parent="menu_openstack_main" sequence="4" />

        <!-- form view for a openstack support_subscription type -->
        <record id="view_openstack_support_subscription_type_form" model="ir.ui.view">
            <field name="name">openstack.support_subscription.type.form</field>
            <field name="model">openstack.support_subscription.type</field>
            <field name="arch" type="xml">
                <form string="OpenStack Support Subscription Types">
                    <group col="4">
                        <field name="name" />
                        <field name="product" />
                    </group>
                    <group col="4">
                        <field name="usage_percent" />
                        <field name="create_date" />
                    </group>
                </form>
            </field>
        </record>

        <!-- tree view for all openstack support_subscription type -->
        <record id="view_openstack_support_subscription_type_tree" model="ir.ui.view">
            <field name="name">openstack.support_subscription.type.tree</field>
            <field name="model">openstack.support_subscription.type</field>
            <field name="arch" type="xml">
                <tree string="OpenStack Support Subscription Types">
                    <field name="name" />
                    <field name="product" />
                    <field name="usage_percent" />
                </tree>
            </field>
        </record>

        <!-- action to open the openstack support_subscription type list -->
        <record id="action_openstack_support_subscription_type_form" model="ir.actions.act_window">
            <field name="name">OpenStack Support Subscription Types</field>
            <field name="res_model">openstack.support_subscription.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu item for openstack support_subscription type -->
        <menuitem
            action="action_openstack_support_subscription_type_form"
            id="menu_action_openstack_support_subscription_type_form"
            parent="menu_openstack_configuration" sequence="2" />

    </data>
</odoo>
