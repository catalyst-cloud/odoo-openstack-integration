<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_document" name="report_invoice_document (in openstack integration)">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <t t-set="categorised" t-value="o.categorised_openstack_invoice_lines()" />
                <t t-set="uncategorised" t-value="categorised.uncategorised" />
                <t t-set="address">
                    <address t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                    <div t-if="o.partner_id.vat" class="mt16">
                        <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label" id="inv_tax_id_label"/>
                        <t t-else="">Tax ID</t>: <span t-field="o.partner_id.vat"/></div>
                </t>
                <div class="page">
                    <h2>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Invoice</span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                        <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                        <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                        <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                        <span t-if="o.name != '/'" t-field="o.name"/>
                    </h2>
                    <t t-if="o.os_project">
                        <h3>Project: <span t-esc="o.os_project['name']"></span></h3>
                        <div><p>Project ID: <span t-esc="o.os_project['os_id']"></span></p></div>
                    </t>
                    <div id="information" class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2" t-if="o.invoice_date" name="invoice_date">
                            <strong>Invoice Date:</strong>
                            <p class="m-0" t-field="o.invoice_date"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'" name="due_date">
                            <strong>Due Date:</strong>
                            <p class="m-0" t-field="o.invoice_date_due"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.invoice_origin" name="origin">
                            <strong>Source:</strong>
                            <p class="m-0" t-field="o.invoice_origin"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.partner_id.ref" name="customer_code">
                            <strong>Customer Code:</strong>
                            <p class="m-0" t-field="o.partner_id.ref"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.ref" name="reference">
                            <strong>Reference:</strong>
                            <p class="m-0" t-field="o.ref"/>
                        </div>
                    </div>

                    <t t-set="outstanding" t-value="o.outstanding_invoices" />

                    <t t-if="o.os_project and outstanding.total_owing() > 0">
                        <h3>Statement of accounts:</h3>
                        <t t-if="outstanding.old_owing() != 0 or outstanding.current_owing() != 0">
                            <div>
                                <table class="table" style="width:100%">
                                    <thead>
                                        <th>Invoice ID</th>
                                        <th>Due date</th>
                                        <th>Status</th>
                                        <th class="text-right">Amount due</th>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="outstanding.ordered_old_invoices()" t-as="invoice">
                                            <tr>
                                                <td><span t-esc="invoice['name']"></span></td>
                                                <td><span t-esc="invoice['invoice_date_due'].strftime('%d/%m/%Y')"></span></td>
                                                <td><span>Overdue</span></td>
                                                <td class="text-right"><span t-esc="'%.2f'%(invoice['amount_residual_signed'])" style="color: red"></span></td>
                                            </tr>
                                        </t>
                                        <t t-foreach="outstanding.ordered_current_invoices()" t-as="invoice">
                                            <tr>
                                                <td><span t-esc="invoice['name']"></span></td>
                                                <td><span t-esc="invoice['invoice_date_due'].strftime('%d/%m/%Y')"></span></td>
                                                <td><span>Due</span></td>
                                                <td class="text-right"><span t-esc="'%.2f'%(invoice['amount_residual_signed'])"></span></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </t>

                        <div class="clearfix">
                            <div class="row">
                                <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                    <table class="table table-sm" style="page-break-inside: avoid;">
                                        <t t-if="outstanding.old_owing() != 0">
                                            <tr>
                                                <td><strong>Overdue</strong></td>
                                                <td class="text-right">
                                                    <span t-esc="'%.2f'%(outstanding.old_owing())" style="color:red"/>
                                                </td>
                                            </tr>
                                        </t>
                                        <t t-if="outstanding.old_owing() != 0 or outstanding.current_owing() != 0">
                                            <tr>
                                                <td>Currently due</td>
                                                <td class="text-right">
                                                    <span t-esc="'%.2f'%(outstanding.current_owing())"/>
                                                </td>
                                            </tr>
                                        </t>
                                        <tr>
                                            <td><strong>Total due</strong></td>
                                            <td class="text-right">
                                                <strong><span t-esc="'%.2f'%(outstanding.total_owing())"/></strong>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    <div style="page-break-before: always;"></div>
                </t>


                    <h3>Invoice summary:</h3>

                    <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                    <div>
                        <table class="table" style="width:100%">
                            <thead>
                                <th>Product</th>
                                <th class="text-right">Credit</th>
                                <th class="text-right">Debit</th>
                                <th class="text-right">Total</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><span style="font-size:1.25em"><strong>Overall Usage</strong></span> (before tax)</td>
                                    <td class="text-right"><strong><span t-esc="'%.2f'%(categorised.credit)" style="font-size:1.25em"></span></strong></td>
                                    <td class="text-right"><strong><span t-esc="'%.2f'%(categorised.debit)" style="font-size:1.25em"></span></strong></td>
                                    <td class="text-right"><strong><span t-esc="'%.2f'%(categorised.total())" style="font-size:1.25em"></span></strong></td>
                                </tr>
                                <t t-foreach="categorised.products.values()" t-as="product">
                                    <tr>
                                        <th><span t-esc="product.name" style="font-size:1.1em"></span></th>
                                        <td class="text-right"><strong><span t-esc="'%.2f'%(product.credit)" style="font-size:1.1em"></span></strong></td>
                                        <td class="text-right"><strong><span t-esc="'%.2f'%(product.debit)" style="font-size:1.1em"></span></strong></td>
                                        <td class="text-right"><strong><span t-esc="'%.2f'%(product.total())" style="font-size:1.1em"></span></strong></td>

                                    </tr>
                                    <t t-foreach="product.regions.values()" t-as="region">
                                        <tr>
                                            <td><span t-esc="region.name" style="margin-left:50px"></span></td>
                                            <td class="text-right"><span t-esc="'%.2f'%(region.credit)"></span></td>
                                            <td class="text-right"><span t-esc="'%.2f'%(region.debit)"></span></td>
                                            <td class="text-right"><span t-esc="'%.2f'%(region.total())"></span></td>
                                        </tr>
                                    </t>

                                </t>
                                <t t-foreach="uncategorised" t-as="product">
                                    <tr>
                                        <td style="width: 100%"><span t-esc="product.name" t-options="{'widget': 'text'}"></span></td>
                                        <t t-if="product['display_type'] != 'line_note'">
                                            <td class="text-right"><strong><span t-esc="'%.2f'%(product.credit)" style="font-size:1.1em"></span></strong></td>
                                            <td class="text-right"><strong><span t-esc="'%.2f'%(product.debit)" style="font-size:1.1em"></span></strong></td>
                                            <td class="text-right"><strong><span t-esc="'%.2f'%(product.credit+product.debit)" style="font-size:1.1em"></span></strong></td>
                                        </t>
                                        <t t-else="">
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                        </t>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>

                    <div class="clearfix">
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                <table class="table table-sm" style="page-break-inside: avoid;">
                                    <tr class="border-black o_subtotal" style="">
                                        <td><strong>Subtotal</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_untaxed"/>
                                        </td>
                                    </tr>
                                    <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                        <tr style="">
                                            <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) in [0, 1] and o.amount_untaxed == amount_by_group[2]">
                                                <td><span class="text-nowrap" t-esc="amount_by_group[0]"/></td>
                                                <td class="text-right o_price_total">
                                                    <span class="text-nowrap" t-esc="amount_by_group[3]" />
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                    <span class="text-nowrap"> on
                                                        <t t-esc="amount_by_group[4]"/>
                                                    </span>
                                                </td>
                                                <td class="text-right o_price_total">
                                                    <span class="text-nowrap" t-esc="amount_by_group[3]"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr class="border-black o_total">
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span class="text-nowrap" t-field="o.amount_total"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <br />
                    <p t-if="o.move_type in ('out_invoice', 'in_refund')">
                        Please use the following communication for your payment : <b><span t-field="o.payment_reference"/></b>
                    </p>
                    <p t-if="o.narration" name="comment">
                        <span t-field="o.narration"/>
                    </p>
                    <p t-if="o.invoice_payment_term_id" name="payment_term">
                        <span t-field="o.invoice_payment_term_id.note"/>
                    </p>
                    <p t-if="o.fiscal_position_id.note" name="note">
                        <span t-field="o.fiscal_position_id.note"/>
                    </p>
                    <div id="qrcode" t-if="(o.company_id.qr_code) and (o.currency_id.name == 'EUR') and (o.invoice_partner_bank_id.acc_number != False)">
                        <p t-if="(o.invoice_partner_bank_id.qr_code_valid)">
                            <strong class="text-center">Scan me with your banking app.</strong><br /><br />
                            <img class="border border-dark rounded" t-att-src="o.invoice_partner_bank_id.build_qr_code_url(o.amount_residual, o.payment_reference or o.ref or o.name)"/>
                        </p>
                        <p t-if="(o.invoice_partner_bank_id.qr_code_valid == False)">
                            <strong class="text-center">The SEPA QR Code information are not set correctly.</strong><br />
                        </p>
                    </div>
                </div>

                <t  t-set="bank_account" t-value="o.invoice_partner_bank_id or o.company_id.bank_ids[0]"/>
                <style>
                    .os_remittence_advice {
                        page-break-inside: avoid;
                    }
                    .os_remittance_advice .os_remittance_advice_title {
                        font-weight: 600;
                    }
                    .os_remittance_advice .os_remittance_table {
                        width: 100%;
                        border-bottom: 0;
                    }
                    .os_remittance_advice .os_remittance_table tr {
                        border-bottom: 0;
                    }
                    .os_remittance_advice .os_remittance_table tr:last-child td {
                        border-bottom: 0;
                    }
                    .os_remittance_advice .os_remittance_table td {
                        padding: 1px 0;
                        margin: 0;
                    }
                </style>
                <t t-if="o.os_project">
                    <div name="bank_details" class="os_remittance_advice" style="page-break-inside: avoid" t-if="o.move_type == 'out_invoice'">
                        <h4 class="os_remittance_advice_title">Remittance advice</h4>
                        <table class="os_remittance_table">
                            <tr>
                                <td><span style="font-size:1.1rem;font-weight:600">Please pay before the 20th of the month</span></td>
                            </tr>
                            <tr><td></td></tr>
                            <tr>
                                <td style="font-size:0.9rem">Please remit directly to our bank account and quote the invoice number</td>
                                <td>Invoice number:</td>
                                <td><span t-field="o.payment_reference"/></td>
                            </tr>
                            <tr>
                                <td><span t-esc="bank_account.bank_name"></span></td>
                                <td>From:</td>
                                <td><span t-esc="o.partner_id.name"></span></td>
                            </tr>
                            <tr>
                                <td>
                                    <t t-if="bank_account.acc_type=='bank'">BANK:</t>
                                    <t t-if="bank_account.acc_type=='iban'">IBAN:</t> <span t-esc="bank_account.acc_number"></span>
                                </td>
                                <td><b>Amount due:</b></td>
                                <td><b>
                                    <t t-if="outstanding.old_owing() != 0"><span style="color:red">$<span t-esc="'%.2f'%(o.amount_residual + outstanding.old_owing())"></span></span></t>
                                    <t t-if="outstanding.old_owing() == 0"><span>$<span t-esc="'%.2f'%(o.amount_residual)"></span></span></t>
                                </b></td>
                            </tr>
                            <tr>
                                <td>
                                    <t t-if="bank_account.acc_type=='bank'">SWIFT Code:</t>
                                    <t t-if="bank_account.acc_type=='iban'">SWIFT/BIC:</t> <t t-esc="bank_account.bank_bic"/>
                                </td>
                                <td></td>
                                <td></td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </template>

        <template id="report_invoice_document_with_payments" inherit_id="openstack_integration.report_invoice_document" primary="True">
            <xpath expr="//div[@id='total']/div/table" position="inside">
                <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                <t t-foreach="payments_vals" t-as="payment_vals">
                    <tr>
                        <td>
                            <i class="oe_form_field text-right oe_payment_label">Paid on <t t-esc="payment_vals['date']" t-options='{"widget": "date"}'/></i>
                        </td>
                        <td class="text-right">
                            <span t-esc="payment_vals['amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </td>
                    </tr>
                </t>
                <t t-if="len(payments_vals) > 0">
                    <tr class="border-black">
                        <td><strong>Amount Due</strong></td>
                        <td class="text-right">
                            <span t-field="o.amount_residual"/>
                        </td>
                    </tr>
                </t>
            </xpath>
        </template>

        <template id="report_invoice_with_payments">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.invoice_user_id.sudo().lang if o.move_type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                    <t t-call="openstack_integration.report_invoice_document_with_payments" t-lang="lang"/>
                </t>
            </t>
        </template>

        <report
                id="account_invoices"
                model="account.move"
                string="OpenStack Invoices"
                report_type="qweb-pdf"
                name="openstack_integration.report_invoice_with_payments"
                file="openstack_integration.report_invoice_with_payments"
                attachment="(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')"
                print_report_name="(object._get_report_base_filename())"
                groups="account.group_account_invoice"
        />

    </data>
</odoo>
