<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- form view for a openstack term_discount -->
        <record id="view_openstack_term_discount_form" model="ir.ui.view">
            <field name="name">openstack.term_discount.form</field>
            <field name="model">openstack.term_discount</field>
            <field name="arch" type="xml">
                <form string="OpenStack Term Discount">
                    <group col="4">
                        <field name="partner" />
                        <field name="project" />
                    </group>
                    <group col="4">
                        <field name="start_date" />
                        <field name="end_date" />
                        <field name="early_termination_date" />
                    </group>
                    <group col="4">
                        <field name="min_commit" />
                        <field name="discount_percent" />
                    </group>
                    <group col="4">
                        <field name="superseded_by" />
                        <field name="create_date" />
                    </group>
                </form>
            </field>
        </record>

        <!-- tree view for all openstack term_discounts -->
        <record id="view_openstack_term_discount_tree" model="ir.ui.view">
            <field name="name">openstack.term_discount.tree</field>
            <field name="model">openstack.term_discount</field>
            <field name="arch" type="xml">
                <tree string="OpenStack Term Discounts">
                    <field name="partner" />
                    <field name="project" />
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="min_commit" />
                    <field name="discount_percent" />
                </tree>
            </field>
        </record>

        <!-- Search functionality on term_discounts -->
        <record id="view_openstack_term_discount_filter" model="ir.ui.view">
            <field name="name">openstack.term_discount.select</field>
            <field name="model">openstack.term_discount</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Term Discount">
                    <field name="project" />
                </search>
            </field>
        </record>

        <!-- action to open the openstack term_discount list -->
        <record id="action_openstack_term_discount_form" model="ir.actions.act_window">
            <field name="name">OpenStack Term Discounts</field>
            <field name="res_model">openstack.term_discount</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu item for openstack term_discount -->
        <menuitem
            action="action_openstack_term_discount_form"
            id="menu_action_openstack_term_discount_form"
            parent="menu_openstack_discounts" sequence="2" />

    </data>
</odoo>
