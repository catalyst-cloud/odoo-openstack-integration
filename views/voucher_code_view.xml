<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- form view for a openstack voucher_code -->
        <record id="view_openstack_voucher_code_form" model="ir.ui.view">
            <field name="name">openstack.voucher_code.form</field>
            <field name="model">openstack.voucher_code</field>
            <field name="arch" type="xml">
                <form string="OpenStack Voucher Code">
                    <group col="4">
                        <field name="code" />
                        <field name="create_date" />
                    </group>
                    <group col="4">
                        <field name="claimed" />
                        <field name="expiry_date" />
                        <field name="multi_use" />
                    </group>
                    <group col="4">
                        <field name="sales_person" />
                        <field name="customer_group" />
                        <field name="tags" widget="many2many_tags" />
                        <field name="quota_size" />
                    </group>
                    <group col="4">
                        <field name="credit_amount" />
                        <field name="credit_type" />
                        <field name="credit_duration" />
                    </group>
                    <group col="4">
                        <field name="grant_value" />
                        <field name="grant_type" />
                        <field name="grant_duration" />
                    </group>
                </form>
            </field>
        </record>

        <!-- tree view for all openstack voucher_codes -->
        <record id="view_openstack_voucher_code_tree" model="ir.ui.view">
            <field name="name">openstack.voucher_code.tree</field>
            <field name="model">openstack.voucher_code</field>
            <field name="arch" type="xml">
                <tree string="OpenStack Voucher Codes">
                    <field name="code" />
                    <field name="claimed" />
                    <field name="multi_use" />
                    <field name="expiry_date" />
                    <field name="create_date" />
                </tree>
            </field>
        </record>

        <!-- Search functionality on openstack voucher_codes -->
        <record id="view_openstack_voucher_code_filter" model="ir.ui.view">
            <field name="name">openstack.voucher_code.select</field>
            <field name="model">openstack.voucher_code</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Voucher Code">
                    <field name="code" />
                    <field name="sales_person" />
                    <field name="customer_group" />
                    <field name="credit_type" />
                    <field name="tags" widget="many2many_tags" />
                </search>
            </field>
        </record>

        <!-- action to open the openstack voucher_code list -->
        <record id="action_openstack_voucher_code_form" model="ir.actions.act_window">
            <field name="name">OpenStack Voucher Codes</field>
            <field name="res_model">openstack.voucher_code</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu item for openstack voucher_code -->
        <menuitem
            action="action_openstack_voucher_code_form"
            id="menu_action_openstack_voucher_code_form"
            parent="menu_openstack_main" sequence="6" />

    </data>
</odoo>
