<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- form view for a openstack referral_code -->
        <record id="view_openstack_referral_code_form" model="ir.ui.view">
            <field name="name">openstack.referral_code.form</field>
            <field name="model">openstack.referral_code</field>
            <field name="arch" type="xml">
                <form string="OpenStack Referral Code">
                    <group col="4">
                        <field name="code" />
                        <field name="partner" />
                    </group>
                    <group col="4">
                        <field name="referral_credit_amount" />
                        <field name="referral_credit_type" />
                        <field name="referral_credit_duration" />
                    </group>
                    <group col="4">
                        <field name="before_reward_usage_threshold" />
                        <field name="allowed_uses" />
                    </group>
                    <group col="4">
                        <field name="reward_credit_amount" />
                        <field name="reward_credit_type" />
                        <field name="reward_credit_duration" />
                    </group>
                    <group col="4">
                        <field name="create_date" />
                    </group>
                    <notebook>
                        <page string="Referrals">
                            <field
                                name="referrals"
                                widget="one2many_list"
                                string="Referrals" />
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <!-- tree view for all openstack referral_codes -->
        <record id="view_openstack_referral_code_tree" model="ir.ui.view">
            <field name="name">openstack.referral_code.tree</field>
            <field name="model">openstack.referral_code</field>
            <field name="arch" type="xml">
                <tree string="OpenStack Referral Codes">
                    <field name="code" />
                    <field name="partner" />
                </tree>
            </field>
        </record>

        <!-- Search functionality on referral_codes -->
        <record id="view_openstack_referral_code_filter" model="ir.ui.view">
            <field name="name">openstack.referral_code.select</field>
            <field name="model">openstack.referral_code</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Referral Code">
                    <field name="partner" />
                    <field name="code" />
                </search>
            </field>
        </record>

        <!-- action to open the openstack referral_code list -->
        <record id="action_openstack_referral_code_form" model="ir.actions.act_window">
            <field name="name">OpenStack Referral Codes</field>
            <field name="res_model">openstack.referral_code</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu item for openstack referral_code -->
        <menuitem
            action="action_openstack_referral_code_form"
            id="menu_action_openstack_referral_code_form"
            parent="menu_openstack_discounts" sequence="4" />

    </data>
</odoo>
