<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- form view for a openstack trial -->
        <record id="view_openstack_trial_form" model="ir.ui.view">
            <field name="name">openstack.trial.form</field>
            <field name="model">openstack.trial</field>
            <field name="arch" type="xml">
                <form string="OpenStack Trial">
                    <group col="4">
                        <field name="partner" />
                        <field name="create_date" />
                    </group>
                    <group col="4">
                        <field name="start_date" />
                        <field name="end_date" />
                    </group>
                    <group col="4">
                        <field name="account_suspended_on" />
                        <field name="account_terminated_on" />
                        <field name="account_upgraded_on" />
                    </group>
                </form>
            </field>
        </record>

        <!-- tree view for all openstack trials -->
        <record id="view_openstack_trial_tree" model="ir.ui.view">
            <field name="name">openstack.trial.tree</field>
            <field name="model">openstack.trial</field>
            <field name="arch" type="xml">
                <tree string="OpenStack Trials">
                    <field name="partner" />
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="account_suspended_on" />
                    <field name="account_terminated_on" />
                    <field name="account_upgraded_on" />
                </tree>
            </field>
        </record>

        <!-- Search functionality on openstack trials -->
        <record id="view_openstack_trial_filter" model="ir.ui.view">
            <field name="name">openstack.trial.select</field>
            <field name="model">openstack.trial</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Trial">
                    <field name="partner" />
                </search>
            </field>
        </record>

        <!-- action to open the openstack trial list -->
        <record id="action_openstack_trial_form" model="ir.actions.act_window">
            <field name="name">OpenStack Trials</field>
            <field name="res_model">openstack.trial</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu item for openstack trial -->
        <menuitem
            action="action_openstack_trial_form"
            id="menu_action_openstack_trial_form"
            parent="menu_openstack_main" sequence="5" />

    </data>
</odoo>
