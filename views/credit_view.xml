<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- form view for a openstack credit -->
        <record id="view_openstack_credit_form" model="ir.ui.view">
            <field name="name">openstack.credit.form</field>
            <field name="model">openstack.credit</field>
            <field name="arch" type="xml">
                <form string="OpenStack Credit">
                    <group col="4">
                        <field name="credit_type" />
                        <field name="project" />
                        <field name="voucher_code" />
                    </group>
                    <group col="4">
                        <field name="current_balance" />
                        <field name="start_date" />
                        <field name="initial_balance" />
                        <field name="expiry_date" />
                    </group>
                    <group col="4">
                        <field name="create_date" />
                    </group>
                    <notebook>
                        <page string="Transactions">
                            <field
                                name="transactions"
                                widget="one2many_list"
                                string="Transactions"
                                context="{'default_credit': id}" />
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <!-- tree view for all openstack credits -->
        <record id="view_openstack_credit_tree" model="ir.ui.view">
            <field name="name">openstack.credit.tree</field>
            <field name="model">openstack.credit</field>
            <field name="arch" type="xml">
                <tree string="OpenStack Credits">
                    <field name="voucher_code" />
                    <field name="project" />
                    <field name="credit_type" />
                    <field name="start_date" />
                    <field name="expiry_date" />
                    <field name="current_balance" />
                    <field name="initial_balance" />
                </tree>
            </field>
        </record>

        <!-- tree view for all openstack credit transactions -->
        <record id="view_openstack_credit_transaction_tree" model="ir.ui.view">
            <field name="name">openstack.credit.transaction.tree</field>
            <field name="model">openstack.credit.transaction</field>
            <field name="arch" type="xml">
                <tree string="OpenStack Credit Transactions">
                    <field name="credit" />
                    <field name="value" />
                    <field name="description" />
                    <field name="create_date" />
                </tree>
            </field>
        </record>

        <!-- Search functionality for credit -->
        <record id="view_openstack_credit_filter" model="ir.ui.view">
            <field name="name">openstack.credit.select</field>
            <field name="model">openstack.credit</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Credit">
                    <field name="voucher_code" />
                    <field name="project" />
                </search>
            </field>
        </record>

        <!-- action to open the openstack credit list -->
        <record id="action_openstack_credit_form" model="ir.actions.act_window">
            <field name="name">OpenStack Credits</field>
            <field name="res_model">openstack.credit</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu item for openstack credit -->
        <menuitem
            action="action_openstack_credit_form"
            id="menu_action_openstack_credit_form"
            parent="menu_openstack_discounts" sequence="0" />

        <!-- form view for a openstack credit type -->
        <record id="view_openstack_credit_type_form" model="ir.ui.view">
            <field name="name">openstack.credit.type.form</field>
            <field name="model">openstack.credit.type</field>
            <field name="arch" type="xml">
                <form string="OpenStack Credit Types">
                    <group col="4">
                        <field name="name" />
                        <field name="refundable" />
                        <!-- <field name="only_for_products" widget="one2many" />
                        <field name="only_for_product_categories" widget="one2many" /> -->
                    </group>
                    <group col="4">
                        <field name="product" />
                        <field name="create_date" />
                    </group>
                </form>
            </field>
        </record>

        <!-- tree view for all openstack credit type -->
        <record id="view_openstack_credit_type_tree" model="ir.ui.view">
            <field name="name">openstack.credit.type.tree</field>
            <field name="model">openstack.credit.type</field>
            <field name="arch" type="xml">
                <tree string="OpenStack Credit Types">
                    <field name="name" />
                    <field name="refundable" />
                    <!-- <field name="only_for_products" />
                    <field name="only_for_product_categories" /> -->
                    <field name="product" />
                </tree>
            </field>
        </record>

        <!-- action to open the openstack credit type list -->
        <record id="action_openstack_credit_type_form" model="ir.actions.act_window">
            <field name="name">OpenStack Credit Types</field>
            <field name="res_model">openstack.credit.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu item for openstack credit type -->
        <menuitem
            action="action_openstack_credit_type_form"
            id="menu_action_openstack_credit_type_form"
            parent="menu_openstack_configuration" sequence="0" />

    </data>
</odoo>
